<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension point="org.eclipse.ui.views">
		<category
			name="Gamification"
			id="gamification">
		</category>
		<view
			name="PapyGame"
			icon="icons/papygame-16x16.png"
			class="org.eclipse.papyrus.gamification.view.MainView"
			id="org.eclipse.papyrus.gamification.view"
			category="gamification"
			inject="true"
			restorable="true">
		</view>
	</extension>
	
	<extension
			point="org.eclipse.ui.perspectives">
		<perspective
				class="org.eclipse.papyrus.gamification.perspective.PapyGamePerspective"
				icon="platform:/plugin/org.eclipse.papyrus.gamification/icons/papygame-16x16.png"
				id="org.eclipse.papyrus.gamification.perspective"
				name="PapyGame">
		</perspective>
	</extension>
</plugin>
